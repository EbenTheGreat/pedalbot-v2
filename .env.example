# Environment Variables Template
# Copy this to .env and fill in your values
# NEVER commit the actual .env file!

# MongoDB Atlas
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/
MONGODB_DB_NAME=pedalbot_db

# Pinecone Vector Database
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_INDEX_NAME=pedalbot

# LLM APIs
GROQ_API_KEY=your_groq_api_key
VOYAGEAI_API_KEY=your_voyageai_api_key

# Authentication
JWT_SECRET_KEY=generate_with_openssl_rand_hex_32

# Redis (optional for local dev)
REDIS_URI=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0

# Google Vision OCR (path to credentials file)
GOOGLE_VISION_CREDENTIALS_PATH=./google-vision-credentials.json

# Optional APIs
REVERB_API_KEY=your_reverb_api_key
LANGSMITH_API_KEY=your_langsmith_api_key
LANGSMITH_PROJECT=pedalbot-dev
LANGSMITH_TRACING=true

# Environment
ENV=development
DEBUG=true
